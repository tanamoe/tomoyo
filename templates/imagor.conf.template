server {
    listen 80;
    listen [::]:80;
    server_name ${NGINX_IMAGE_DOMAIN};
    location / {
        rewrite ^ https://${NGINX_IMAGE_DOMAIN}$request_uri? permanent;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ${NGINX_IMAGE_DOMAIN};
    client_max_body_size 100M;
    keepalive_timeout 70;

    ssl_certificate     /etc/ssl/image.tana.moe.crt;
    ssl_certificate_key /etc/ssl/image.tana.moe.key;

    access_log /var/log/nginx/imagor.access.log;
    error_log  /var/log/nginx/imagor.error.log;

    location / {
        proxy_set_header Connection '';
        proxy_read_timeout 360s;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_pass http://imagor:8000;
    }
}
